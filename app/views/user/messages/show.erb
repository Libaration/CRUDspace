<style>

  div.messageactions {
    width: 101%;
    display: flex;
    flex-direction: row;
    font-size: 12px;
    padding-top: 10px;
    color: #152e71;
    font-weight: bold;
  }

  .messagereply{
    flex: 1;
  }

  .messagereply form {

    text-align: left;

  }
  .messagereply:nth-child(2){
    padding-top: 3px;
    text-align: right;
  }
  table {
    border: 1px solid #689aca;
    border-spacing: 3px;
    width: 1000px;
    text-align: left;
    font: normal 10pt/normal Verdana, Arial, Helvetica, sans-serif;
}
  table, th, td {
    border: 1px solid #e4e4e9;
    border-collapse: collapse;
  }
  th {
    padding-right: 10px;
    padding-top: 8px;
    padding-bottom: 8px;
    padding-left: 5px;
    background-color: #e9f1fa;
    font-size: 14px;
    width: 80px;
  }
    td {
      padding: 5px;
    }


    td img {
      height: 125px;
    }
    span.relative {
      position: relative;
      bottom: 50px;
      color: #152e71;
    }
</style>

<table>
  <tr><th>From:</th><td><a href="/user/<%= @message.sender.id %>"> <img src="/images/<%= @message.sender.images.first.image %>"> </a><b> <span class="relative"> <%= @message.sender.name %> </span> </b></td></tr>
  <tr><th>Date:</th><td><%= @message.created_at.strftime("%A, %d %b %Y %l:%M %p %Z") %></td></tr>
  <tr><th>Subject:</th><td> <%= @message.subject %></td></tr>
  <tr><th></th> <td><%= @message.content %></td></tr>

</table>
<div class="messageactions">
  <div class="messagereply">
  <form method="GET" action="/user/<%= @user.id %>/messages/<%= @message.id %>/reply">
    <input type="submit" value="Reply">
  </form>
  </div>
  <div class="messagereply">
    <% unless previous_message.nil? %> <a href="/user/<%=  @user.id  %>/messages/<%=  previous_message.id  %>"> << Previous </a><%  end %>
    <% unless next_message.nil? %> <a href="/user/<%=  @user.id  %>/messages/<%=  next_message.id  %>"> Next >></a><%  end %>
  </div>
</div>