<style>
  table#requestsempty {
    display: flex;
    flex-wrap: wrap;
    flex-direction: column;
    align-items: flex-start;
    text-align: center;
    width: 100%;
    font: normal 8pt/normal Verdana, Arial, Helvetica, sans-serif;
  }

  table#requests {
    display: flex;
    flex-wrap: wrap;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
    font: normal 8pt/normal Verdana, Arial, Helvetica, sans-serif;
  }

  table {
    border: 1px solid #689aca;
    border-spacing: 3px;
    border-collapse: separate;
    width: 800px;
      }
  th, td {
    padding: 5px;
    background-color: #e9f1fa;

  }

    th#topbar {
      background-color: #689aca;
      padding: 6px;
      font-size: 12px;
      font-weight: bold;
      color: white;
    }
    table img {
      height: 150px;
    }
  table td:last-child {
    width: 1000px;
  }
  td.center {
      text-align: center;
  }

  div.deny form {
    text-align: center;
    padding: 5px;
  }
</style>


<% if !@user.pending_friends.empty? %>
    <table id="requests">
      <tr>
        <th id=topbar>From:</th><th id="topbar">Confirmation:</th>
      </tr>
      <% @user.pending_friends.each do |friend| %>
        <form action="/user/<%= current_user.id %>/approve?friend_id=<%= friend.id %>" method="post">
        <tr>
          <td><a href="/user/<%= friend.id %>"><img src="/images<%= friend.images.first.image %>"></a>
            <br>
          </td>
          <td class="center">
            <span style="font-weight: bold"><a href="/user/<%= friend.id %>"><%= friend.name %></a></span> wants to be your friend!<br>
            <input type="submit" value="Approve">
        </form>
        <div class="deny"><form action="/user/<%= current_user.id %>/deny?friend_id=<%= friend.id %>" method="post">
          <input type="hidden" name="_method" value="DELETE">
          <input type="submit" value="Deny">
        </form></div>
          </td>
        </tr>
      <% end %>
    </table>
  <% else %>
  <table id="requestsempty">
    <tr>
      <div class="boxHead"><b>Friend Requests</b></div>
    </tr>
    <td><h2>You don't have any new Friend Requests at this time.</h2></td>
    <tr><td><span style="font-size: 12px">View <a href="/friends">Members</a> to find new friends.</span></td></tr>
  </table>
<% end %>



