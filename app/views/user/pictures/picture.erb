<style>
  .form-control {
    font: normal 8pt/normal Verdana, Arial, Helvetica, sans-serif;
    text-transform: none;
    text-decoration: none;
  }
 table.pictures {
   display: flex;
   flex-wrap: wrap;
  }
</style>

<div id="login">
  <table class="pictures">
    <tr>
  <% @user.images.each do |image| %>
        <td><a href="/user/<%= @user.id %>/pictures/<%= image.id %>"><img src="/images<%= image.image %>" width="200px"></a></td>



<% end %>
      </tr>
  </table>
</div>


<% if @user == current_user %>
<form method='POST' action='/user/<%= current_user.id %>/pictures' enctype="multipart/form-data" class="centerform">
  <h1>Upload new photo</h1><input type='file' name='file' class='form-control'><br>
  <input type="submit" value="Upload">
</form>
<% end %>