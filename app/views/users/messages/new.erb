<style>

  div.messageactions {
    width: 101%;
    display: flex;
    flex-direction: row;
    font-size: 12px;
    padding-top: 10px;
    color: #152e71;
    font-weight: bold;
  }

  .messagereply{
    flex: 1;
    text-align: left;
  }

  .messagereply form {

    text-align: left;

  }
  .messagereply:nth-child(2){
    padding-top: 3px;
    text-align: right;
  }
  table {
    border: 1px solid #689aca;
    border-spacing: 3px;
    width: 1000px;
    text-align: left;
    font: normal 9pt/normal Verdana, Arial, Helvetica, sans-serif;
  }
  table, th, td {
    border: 1px solid #e4e4e9;
    border-collapse: collapse;
  }
  th {
    padding-right: 10px;
    padding-top: 8px;
    padding-bottom: 8px;
    padding-left: 5px;
    background-color: #e9f1fa;
    font-size: 14px;
    width: 80px;
  }
  td {
    padding: 5px;
  }


  td img {
    height: 125px;
  }
  span.relative {
    position: relative;
    bottom: 50px;
    color: #152e71;
  }

  table textarea, table input {
      width: 100%;
    }
    table textarea {
      height: 500px;
      word-wrap:break-word;
      /*font-size: 15px;*/
      font: normal 10pt/normal Verdana, Arial, Helvetica, sans-serif;
    }
</style>
<form method="POST" action="/users/<%= @user.id %>/messages/<%= @friend.id %>">
<table>
  <tr><th>To:</th><td><a href="/users/<%= @friend.id %>"> <img src="/images/<%= @friend.images.first.image %>"> </a><b> <span class="relative"> <%= @friend.name %> </span> </b></td></tr>
  <tr><th>Subject:</th><td> <input type="text" name="subject" value=""></td></tr>
  <tr><th>Body:</th><td>
    <textarea style="resize: none" name="content"></textarea></td></tr>

</table>
<div class="messageactions">
  <div class="messagereply">

      <input type="submit" value="Send">
  </div>
</div>
</form>

